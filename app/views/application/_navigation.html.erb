<div class="navbar">
  <div class="navbar-inner">
    <%= link_to "WorldFood", root_path, class: "brand" %>
    <ul class="nav">
      <li class="<%= active_if_path_is(countries_path) %>"><%= link_to "Countries", countries_path %></li>
    </ul>

    <ul class="nav pull-right">
      <% if current_user %>
        <li><%= link_to current_user.name, root_path %></li>
        <li><%= link_to "Sign out", signout_path %></li>
      <% else %>
        <li><%= link_to "Sign in with Facebook", "/auth/facebook" %></li>
      <% end %>
    </ul>
  </div>
</div>
